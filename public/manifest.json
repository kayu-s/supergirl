{
  "name": "supergirl",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Job automation Chrome Extension",
  "icons": {
    "16": "icons/supergirl@2x.png",
    "48": "icons/supergirl@2x.png",
    "128": "icons/supergirl@2x.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.honsha.fsi.co.jp/cws/*",
        "https://intra.famoffice.jp/*",
        "https://login.microsoftonline.com/*"
      ],
      "js": ["content_script.js"]
    }
  ],
  "options_page": "options.html",
  "permissions": ["storage", "scripting", "tabs"],
  "action": {
    "default_popup": "popup.html"
  }
}
